<link rel="stylesheet" href="/scss/chat_box.scss">
<% if(locals.user){%>
    <div id="user-chat-box">
        <ul id="chat-messages-list">
            <li class="other-message">
                <span>Other Message</span>
            </li>
            <li class="self-message">
                <span>Self Message</span>
            </li>
        </ul>
        <div id="chat-message-input-container" class="form-inline">
            <input type="text" id="chat-message-input" placeholder="Type message here">
            <button id="send-message">Send</button>
        </div>
          
        <!-- <div class="form-group mx-sm-3 mb-2" id="chat-message-input-container">
            <input type="text" class="form-control" placeholder="Type message here">
            <button type="submit" id="send-message" class="btn btn-primary mb-2">Send</button>
          </div> -->
    </div>
    
     <!-- To clear the input after sending text message -->
    <script>
        $('#send-message').click(function(){
            setTimeout(
                function()
                {
                    $('#chat-message-input').val('');
                }, 10);
        });
    </script>
<%} %>